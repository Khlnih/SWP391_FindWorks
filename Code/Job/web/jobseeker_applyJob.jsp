    <div class="job_details_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="apply_job_form white-bg">
                        <h4>Apply for this job</h4>
                        <%-- Display error message if it exists --%>
                        <% 
                            String error = (String) request.getAttribute("error");
                            if (error != null && !error.isEmpty()) {
                        %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% 
                            }
                        %>
                        <form action="applyJob" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="action" value="apply_Job">
                            <input type="hidden" name="jobId" value="${jobseekerID}">
                            <input type="hidden" name="postID" value="${postID}">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="input_field">
                                        <label for="coverLetter">Cover Letter</label>
                                        <textarea name="coverLetter" id="coverLetter" cols="30" rows="10" placeholder="Write your cover letter here..." required></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="input_field">
                                        <label for="cv">Upload your CV/Resume</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="cv" name="cv" required>
                                            <label class="custom-file-label" for="cv">Choose file</label>
                                        </div>
                                        <div class="serach_cat d-flex justify-content-end mt-3">
                                            <button type="submit" class="boxed-btn3">Apply Now</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
